{% extends 'base.html.twig' %}
{% form_theme EventFormType 'bootstrap_4_layout.html.twig' %}
{% block stylesheets %}
<link href="/css/event.css"  rel="stylesheet">
{% endblock %}
{% block title %}{% endblock %}

{% block body %}

<h1 class="mt-3 mb-3">Modifier un événement</h1>
<button class="btn btn-primary mb-4" id="btn_form">Cliquez pour modifier un événement</button>
<div class="bg">
    <div class="d-flex flex-column justify-content-center mx-auto my-2 px-4 py-2 mt-5 mb-5 box-form">
{{ form_start(EventFormType) }}

{{ form_widget(EventFormType) }}

<button type="submit" class="btn btn-success mb-2">valider</button>

{{ form_end(EventFormType) }}
</div>
</div>

<div class="event">

</div>

{% endblock %}

{% block javascripts %}
<script>
$( "#btn_form" ).click(function() {
  $( ".bg" ).slideToggle( "slow" );
});
</script>
{% endblock %}